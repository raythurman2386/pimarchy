/* Pimarchy Waybar Theme - Optimized */

* {
    font-family: "{{FONT_FAMILY}}", "Noto Color Emoji", "FontAwesome", sans-serif;
    font-size: {{FONT_SIZE_PX}}px;
    border: none;
    border-radius: 0;
    min-height: 0;
}

window#waybar {
    background: {{BAR_BG_RGBA}};
    color: {{BAR_FG_COLOR}};
    border-bottom: 1px solid {{BAR_BORDER_RGBA}};
}

/* All modules base style */
#clock,
#temperature,
#memory,
#pulseaudio,
#custom-launcher,
#custom-power,
#custom-update,
#workspaces,
#tray {
    padding: 0 8px;
    margin: 3px 2px;
    background-color: {{MODULE_BG_RGBA}};
    border-radius: 8px;
    color: {{MODULE_FG_COLOR}};
    transition: background-color 0.2s ease;
}

/* Module Hover states */
#temperature:hover,
#memory:hover,
#pulseaudio:hover,
#clock:hover {
    background-color: {{MODULE_HOVER_BG_RGBA}};
}

/* Launcher */
#custom-launcher {
    font-size: 15px;
    color: {{COLOR_PRIMARY}};
    background-color: {{LAUNCHER_BG_RGBA}};
}
#custom-launcher:hover {
    background-color: {{LAUNCHER_HOVER_BG_RGBA}};
}

/* Workspaces */
#workspaces button {
    padding: 0 6px;
    font-size: 12px;
    font-weight: bold;
    color: {{COLOR_INACTIVE}};
    transition: color 0.2s ease;
}
#workspaces button.active {
    color: {{COLOR_ACTIVE}};
}

/* Clock */
#clock {
    font-weight: bold;
    color: {{CLOCK_FG_COLOR}};
    background-color: {{CLOCK_BG_RGBA}};
}

/* Hardware Info */
#temperature {
    color: {{COLOR_TEMP}};
}
#temperature.critical {
    color: {{COLOR_ERROR}};
}

#memory {
    color: {{COLOR_MEMORY}};
}

/* Audio */
#pulseaudio {
    color: {{COLOR_VOLUME}};
}
#pulseaudio.muted {
    color: {{COLOR_MUTED}};
}

/* Tray */
#tray > .passive {
    -gtk-icon-effect: dim;
}
#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: {{TRAY_ATTENTION_BG_RGBA}};
}

/* Power Menu */
#custom-power {
    font-size: 14px;
    color: {{COLOR_POWER}};
    background-color: {{POWER_BG_RGBA}};
}
#custom-power:hover {
    background-color: {{POWER_HOVER_BG_RGBA}};
}

/* Update Indicator */
#custom-update {
    font-size: 15px;
    color: {{COLOR_PRIMARY}};
    background-color: {{LAUNCHER_BG_RGBA}};
    animation: pulse 2s ease-in-out infinite;
}
#custom-update:hover {
    background-color: {{LAUNCHER_HOVER_BG_RGBA}};
}

@keyframes pulse {
    0%   { opacity: 1.0; }
    50%  { opacity: 0.55; }
    100% { opacity: 1.0; }
}

/* Tooltips */
tooltip {
    background-color: {{ROFI_BG_RGBA}};
    border: 1px solid {{ROFI_BORDER_RGBA}};
    border-radius: 8px;
    padding: 4px 2px;
}
tooltip label {
    color: {{BAR_FG_COLOR}};
    padding: 4px 8px;
}
