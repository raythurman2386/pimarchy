/* Pimarchy Waybar Theme - Full-width Top Bar */

* {
    font-family: "{{FONT_FAMILY}}", "Noto Color Emoji", "FontAwesome", sans-serif;
    font-size: {{FONT_SIZE_PX}}px;
    border: none;
    border-radius: 0;
    min-height: 0;
}

window#waybar {
    background: {{BAR_BG_RGBA}};
    border-radius: 0;
    color: {{BAR_FG_COLOR}};
    border: none;
    border-bottom: 1px solid {{BAR_BORDER_RGBA}};
}

/* Module containers */
.modules-left, .modules-center, .modules-right {
    background-color: transparent;
}

/* All modules base style */
#clock,
#temperature,
#memory,
#network,
#pulseaudio,
#custom-launcher,
#custom-power,
#custom-update,
#workspaces,
#tray {
    padding: 0 8px;
    margin: 3px 1px;
    background-color: {{MODULE_BG_RGBA}};
    border-radius: 8px;
    color: {{MODULE_FG_COLOR}};
}

#custom-launcher {
    font-size: 15px;
    color: {{COLOR_PRIMARY}};
    background-color: {{LAUNCHER_BG_RGBA}};
    padding: 0 8px;
}

#custom-launcher:hover {
    background-color: {{LAUNCHER_HOVER_BG_RGBA}};
}

/* Workspace indicator */
#workspaces button {
    padding: 0 6px;
    font-size: 12px;
    font-weight: bold;
    color: {{COLOR_INACTIVE}};
}

#workspaces button.active {
    color: {{COLOR_ACTIVE}};
}

/* Clock (center) */
#clock {
    font-weight: bold;
    color: {{CLOCK_FG_COLOR}};
    background-color: {{CLOCK_BG_RGBA}};
}

#temperature {
    color: {{COLOR_TEMP}};
}

#temperature.critical {
    color: {{COLOR_ERROR}};
}

#memory {
    color: {{COLOR_MEMORY}};
}

#network {
    color: {{COLOR_NETWORK}};
}

#network.disconnected {
    color: {{COLOR_DISCONNECTED}};
}

#pulseaudio {
    color: {{COLOR_VOLUME}};
}

#pulseaudio.muted {
    color: {{COLOR_MUTED}};
}

#tray {
    padding: 0 8px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: {{TRAY_ATTENTION_BG_RGBA}};
}

#custom-power {
    font-size: 14px;
    color: {{COLOR_POWER}};
    background-color: {{POWER_BG_RGBA}};
    padding: 0 8px;
}

#custom-power:hover {
    background-color: {{POWER_HOVER_BG_RGBA}};
}

/* Update available indicator (center bar, next to clock) */
#custom-update {
    font-size: 15px;
    color: {{COLOR_PRIMARY}};
    background-color: {{LAUNCHER_BG_RGBA}};
    padding: 0 10px;
    animation: pulse 2s ease-in-out infinite;
}

#custom-update:hover {
    background-color: {{LAUNCHER_HOVER_BG_RGBA}};
}

@keyframes pulse {
    0%   { opacity: 1.0; }
    50%  { opacity: 0.55; }
    100% { opacity: 1.0; }
}

#temperature:hover,
#memory:hover,
#network:hover,
#pulseaudio:hover,
#clock:hover {
    background-color: {{MODULE_HOVER_BG_RGBA}};
}

/* ── Tooltip styling ─────────────────────────────────────────────────────── */
/* Waybar tooltips are GTK popovers; target both the window and inner label  */
tooltip {
    background-color: {{ROFI_BG_RGBA}};
    border:           1px solid {{ROFI_BORDER_RGBA}};
    border-radius:    8px;
    padding:          4px 2px;
}

tooltip label {
    color:            {{BAR_FG_COLOR}};
    padding:          4px 8px;
}
